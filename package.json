{
	"name": "nintendo-switch-eshop",
	"version": "2.2.4",
	"description": "Unofficial API lib for Nintendo Switch eShop game listing and pricing information.",
	"author": "lmmfranco",
	"license": "Apache-2.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"lint": "eslint src __tests__ --ext js,ts --fix",
		"build": "tsc",
		"start": "tsc -w",
		"docs": "typedoc",
		"prepublishOnly": "tsc && typedoc",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz",
		"up": "yarn upgrade-interactive --latest"
	},
	"dependencies": {
		"@favware/querystring": "^4.1.3",
		"@types/country-data": "^0.0.1",
		"country-data": "^0.0.31",
		"fast-xml-parser": "^3.14.0",
		"node-fetch": "^2.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@favware/eslint-config": "^3.1.5",
		"@favware/ts-config": "^1.1.0",
		"@types/jest": "^24.0.23",
		"@types/node": "^12.12.11",
		"@types/node-fetch": "^2.5.3",
		"common-tags": "^1.8.0",
		"concat-md": "^0.3.2",
		"cz-conventional-changelog": "^3.0.2",
		"eslint": "^6.6.0",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"lint-staged": "^9.4.3",
		"replace": "^1.1.1",
		"standard-version": "^7.0.1",
		"ts-jest": "^24.2.0",
		"ts-node": "^8.5.2",
		"typedoc": "^0.15.2",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^3.7.2"
	},
	"files": [
		"dist/"
	],
	"engines": {
		"node": ">=10",
		"npm": ">=6"
	},
	"keywords": [
		"eshop",
		"switch",
		"nintendo",
		"crawler",
		"lib",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lmmfranco/nintendo-switch-eshop.git"
	},
	"bugs": {
		"url": "https://github.com/lmmfranco/nintendo-switch-eshop/issues"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"yarn lint",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"directories": {
		"lib": "lib",
		"test": "__tests__"
	}
}
