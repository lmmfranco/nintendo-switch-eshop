{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "test:ci": "lerna run test:ci --parallel",
    "build": "lerna run build --parallel",
    "predocs": "lerna run docs:clean --parallel && lerna run docs:build --parallel",
    "docs": "lerna run docs --parallel",
    "postdocs": "lerna run docs:replace --parallel && rimraf packages/**/docsbuild",
    "prepublishOnly": "yarn build && yarn docs",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@favware/eslint-config": "^3.0.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "@types/node-fetch": "^2.5.0",
    "common-tags": "^1.8.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jsdoc-to-markdown": "^5.0.1",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "replace": "^1.1.1",
    "rollup": "^1.20.3",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "5.1.1",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
